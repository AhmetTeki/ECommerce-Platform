@model MultiShop.Dto.CatalogDtos.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12" style="float: right">
                <div class="chart-box">
                    <h4>Update Category</h4>
                    <p>
                        You can update category here.
                    </p>
                    <div class="bs-example" data-example-id="simple-table">
                        <form method="post">
                            <input type="hidden" class="form-control"  placeholder="Category Name" asp-for="CategoryId">
                            <label>Category Name</label>
                            <input type="text" class="form-control" placeholder="Category Name" asp-for="CategoryName">
                            <br/>
                            <label>Category Image</label>
                            <input type="text" class="form-control" placeholder="Category Image" asp-for="ImageUrl">
                            <br/>
                            <button type="submit" class="btn btn-primary">Update Category</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

