@model MultiShop.Dto.CatalogDtos.OfferDiscountDtos.UpdateOfferDiscountDto
@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12" style="float: right">
                <div class="chart-box">
                    <h4>Update Offer Discount</h4>
                    <p>
                        You can update Offer Discount here.
                    </p>
                    <div class="bs-example" data-example-id="simple-table">
                        <form method="post">
                            <input type="hidden" class="form-control" r asp-for="OfferDiscountId">
                            <br/>
                            <label>Title</label>
                            <input type="text" class="form-control" placeholder="Offer Title" asp-for="Title">
                            <br/>
                            <label>Subtitle</label>
                            <input type="text" class="form-control" placeholder="Offer Subtitle" asp-for="SubTitle">
                            <br/>
                            <label>Image Url</label>
                            <input type="text" class="form-control" placeholder="Offer Image" asp-for="ImageUrl">
                            <br/>
                            <button type="submit" class="btn btn-primary">Update Offer Discount</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

