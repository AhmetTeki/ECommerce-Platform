@model MultiShop.Dto.CatalogDtos.SliderDtos.CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12" style="float: right">
                <div class="chart-box">
                    <h4>Add Slider</h4>
                    <p>
                        You can add new slider here.
                    </p>
                    <div class="bs-example" data-example-id="simple-table">
                        <form method="post">
                            <label>Slider Title</label>
                            <input type="text" class="form-control" placeholder="Category Title" asp-for="Title">
                            <br/>
                            <label>Slider Description</label>
                            <input type="text" class="form-control" placeholder="Category Description" asp-for="Description">
                            <br/>
                            <label>Slider Image</label>
                            <input type="text" class="form-control" placeholder="Category Image" asp-for="ImageUrl">
                            <br/>
                            <button type="submit" class="btn btn-primary">Add Slider</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

