@using MultiShop.Dto.CatalogDtos.ProductDtos
@model List<MultiShop.Dto.CatalogDtos.ProductDtos.ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="wrapper">
    <section class="content-header">
        <h1>Basic Tables</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li class="active"><i class="fa fa-envelope-o"></i> Tables</li>
            <li class="active"><i class="fa fa-bars"></i> Basic Tables</li>
        </ol>
    </section>
</div>
<div class="content-wrapper">
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-12" style="float: right">
                <div class="chart-box">
                    <h4>Product List</h4>
                    <p>
                        For basic styling&mdash;light padding and only horizontal dividers&mdash;add the base class <code>.table</code> to
                        any
                        <code>&lt;table&gt;</code>. It may seem super redundant, but given the widespread use of tables for other plugins
                        like
                        calendars and date pickers, we've opted to isolate our custom table styles.
                    </p>
                    <div class="bs-example" data-example-id="simple-table">
                        <table class="table">
                            <caption>
                                Optional table caption.
                            </caption>
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                    <th>Product Images</th>
                                    <th>Product Detail</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ResultProductWithCategoryDto item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.Category.CategoryName</td>
                                        <td>@item.ProductPrice</td>
                                        <td>
                                            <a href="@Url.Action("UpdateProduct", "Product", new { area = "Admin", id = item.ProductId })"
                                               class="btn btn-warning">Update</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("DeleteProduct", "Product", new { area = "Admin", id = item.ProductId })"
                                               class="btn btn-danger">Delete</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("ProductImageDetail", "ProductImage", new { area = "Admin", id = item.ProductId })"
                                               class="btn btn-success">Prodcut Images</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("UpdateProductDetail", "ProductDetail", new { area = "Admin", id = item.ProductId })"
                                               class="btn btn-success">Product Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Product/CreateProduct/" class="btn btn-success">Add Product</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



